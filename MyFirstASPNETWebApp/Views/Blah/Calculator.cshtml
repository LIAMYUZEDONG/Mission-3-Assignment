@model CalculatorModel;

<center>
    <h2>Grade Calculator</h2>
    <br />
    <form method="post">
        <label>Assignment Score:</label>
        <input id="AssignmentScore"  min="0" max="100" asp-for="Assignment"/><br />    <br />
        <label>Group Project Score:</label>
        <input id="GroupProjectScore"  min="0" max="100" asp-for="GroupProject"/><br />    <br />
        <label>Quizzes Score:</label>
        <input id="QuizzesScore"  min="0" max="100"  asp-for="Quizzes"/><br />    <br />
        <label>Exams Score:</label>
        <input id="ExamsScore" min="0" max="100" asp-for="Exams"/><br />    <br />
        <label>INTEX Score:</label>
        <input id="INTEXScore"  min="0" max="100" asp-for="INTEX"/><br />    <br />
        <br />
        <br />
        <input type="submit" id="btnSend" class="class" value="Calculate Grade" />
        <br />
        <br />


        <div asp-validation-summary="All"></div>
    </form>
</center>


<script src="~/js/Grade.js"></script>

